<h1>Listing character_sheets</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Character</th>
      <th>Title</th>
      <th>Description</th>
      <th>Sheet</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @character_sheets.each do |character_sheet| %>
      <tr>
        <td><%=image_tag character_sheet.sheet_url(:thumb).to_s %></td>
        <td><%= character_sheet.character_id %></td>
        <td><%= character_sheet.title %></td>
        <td><%= character_sheet.description %></td>
        <td><%= link_to 'Show', character_sheet %></td>
        <td><%= link_to 'Edit', edit_character_sheet_path(character_sheet) %></td>
        <td><%= link_to 'Destroy', character_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

