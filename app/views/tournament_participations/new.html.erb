<h1>Submit a Character for <%=@tournament.name %></h1>

<%if user_signed_in?%>
	<%if(@characters)%>
		<!-- signed in, render all character for selection =..=b -->
		<%= render 'form' %>
	<%else%>
		<!-- signed in but doesnt have a character -->
		<p>You need to create a character before participating in <%=@tournament.name%></p>
		<p><%= link_to "Create Character",new_character_path,class: "btn btn-primary btn-lg" ,role: "button"%></p>
	<%end%>
	
 <%else%>
 	<!-- not signed in -->
 	<p>You need to be signed in before participating in <%=@tournament.name%></p>   
	<p><%= link_to "Sign Up",new_user_registration_path,class: "btn btn-primary btn-lg" ,role: "button"%></p>
	<p>Already have an account?</p>
	<p><%= link_to "Sign In",new_user_session_path,class: "btn btn-primary btn-lg" ,role: "button"%></p>
 <%end%>